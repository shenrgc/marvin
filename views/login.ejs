<!DOCTYPE html>
<html>
    <head>
    	<title>Login in Marvin</title>
          <% include ./partials/head %>
          <link rel="stylesheet" href="/stylesheets/loginsignup.css">
    </head>
    <body>
        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-md-12 col-lg-12">
              <img id="marvin" src="/images/marvin2.png">
            </div>
            <div class="col-xs-12 col-md-12 col-lg-12">
              <div class="card card-container">
                <form class="form-signin" method="post" action="/users/login">
                  <input type="email" id="inputEmail" class="form-control" placeholder="Email" name="email" required autofocus>
                  <input type="password" id="inputPassword" class="form-control" placeholder="Password" name="password" required>
                  <button class="btn btn-lg btn-success btn-block btn-signin" type="submit" value="submit">Log In</button>
                </form>
                <a href="/register" id='signup' class="btn btn-lg btn-warning btn-block btn-signin" style="text-align='center'">Register now</a>
              </div>
            </div>
          </div>
        </div>
        <% include ./partials/footer %>